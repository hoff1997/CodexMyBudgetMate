# --- Vercel / Next.js ---
NEXT_PUBLIC_SITE_URL=https://your-vercel-domain.vercel.app

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=
SUPABASE_RECEIPTS_BUCKET=receipts

# --- Akahu ---
AKAHU_APP_TOKEN=
AKAHU_CLIENT_ID=
AKAHU_CLIENT_SECRET=
AKAHU_REDIRECT_URI=

# --- Upstash Redis (for Akahu API caching) ---
# Get these from https://console.upstash.com/
# Optional: If not set, caching will be disabled and Akahu API will be called directly
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- Deployment flags ---
NODE_ENV=development

# --- Background jobs ---
CRON_SECRET=
CRON_TARGET_URL=http://localhost:3000/api/jobs/run

# --- Stripe (Subscriptions) ---
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# --- Beta Mode ---
# Set to "true" to bypass subscription checks (development/beta)
BETA_MODE=true
